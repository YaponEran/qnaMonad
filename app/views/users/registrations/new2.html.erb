<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "label"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"control" %>
    </div>

    <div class="field">
      <%= f.label :password,  class: "label"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "control"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :firts_name %><br />
      <%= f.text_field :firts_name, autocomplete: "Firs name" %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autocomplete: "Last name" %>
    </div>

    <div class="field">
      <%= f.label :country %><br />
      <%= f.text_field :country, autocomplete: "Last name" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
